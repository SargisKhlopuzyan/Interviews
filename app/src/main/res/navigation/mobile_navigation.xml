<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.interview.ui.home.HomeFragment"
        android:label="@string/home_fragment">
        <action
            android:id="@+id/action_navigation_home_to_music_fragment"
            app:destination="@id/navigation_music_fragment" />
    </fragment>

    <fragment
        android:id="@+id/navigation_music_fragment"
        android:name="com.example.interview.ui.music.MusicFragment"
        android:label="@string/music_fragment"></fragment>

</navigation>